#!/bin/bash

# Define source and destination directories
SOURCE_DIR="/home/muhammadali/bashpractice"
DEST_DIR="/home/muhammadali/practice"
LOG_FILE="backup_log.txt"

# Check if the source directory exists and is a directory
if [ ! -d "$SOURCE_DIR" ]; then
  echo "Error: Source directory '$SOURCE_DIR' does not exist or is not a directory."
  exit 1
fi

# Perform the backup using rsync and log the process
rsync -av --progress "$SOURCE_DIR/" "$DEST_DIR/" &>> "$LOG_FILE"

# Let the user know the backup is complete
echo "Backup from '$SOURCE_DIR' to '$DEST_DIR' is complete. Check '$LOG_FILE' for details."
